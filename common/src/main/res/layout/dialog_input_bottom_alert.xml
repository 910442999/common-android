<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/v_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_r10_top_fff3f5f6"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/shape_bg_r10_ffffffff"
                android:maxHeight="300dp"
                android:minHeight="40dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_select"
                app:layout_constraintTop_toTopOf="parent"
                tools:minHeight="110dp">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="start"
                    android:imeOptions="flagNoExtractUi|actionSend"
                    android:inputType="textMultiLine"
                    android:paddingLeft="15dp"
                    android:paddingTop="9dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/txt_33"
                    android:textColorHint="@color/bg_dcdcdc"
                    android:textSize="14sp"
                    tools:hint="请输入内容"
                    tools:text="大富科技拉收到回复几哈圣诞节快乐放寒假了大富科技拉收到回复几哈圣诞节快乐放寒假了大富科技拉收到回复几哈圣诞节快乐放寒假了大富科技拉收到回复几哈圣诞节快乐放寒假了大富科技拉收到回复几哈圣诞节快乐放寒假了大富科技拉收到回复几哈圣诞节快乐放寒假了大富科技拉收到回复几哈圣诞节快乐放寒假了大富科技拉收到回复几哈圣诞节快乐放寒假了大富科技拉收到回复几哈圣诞节快乐放寒假了" />

                <TextView
                    android:id="@+id/tv_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="0/200"
                    android:textColor="@color/color_888888"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_select"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_r30_green_primary"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="发送" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</RelativeLayout>