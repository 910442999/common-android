<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="504dp"
    android:orientation="vertical">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <ImageView
         android:id="@+id/iv_close"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_gravity="right"
         android:padding="12dp"
         android:src="@mipmap/icon_close1" />
 </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/download_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="66dp"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="发现新版本" />


        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="22dp"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="发现新版本" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="2dp"
            android:paddingLeft="22dp"
            android:paddingTop="22dp"
            android:paddingBottom="15dp"
            android:scrollbars="vertical"
            android:textColor="#444444"
            android:textSize="12sp"
            tools:text="新版本特性新版本特性：\n1.开户银行：江西银\n2.户姓名：小龙人\n3.子账户：621246000000000000\n4.户姓名：小龙新版本特性：\n1.开户银行：江西银\n2.户姓名：小龙人\n3.子账户：621246000000000000\n4.户姓名：小龙：\n1.开户银行：江西银\n2.户姓名：小龙人\n3.子账户：621246000000000000\n4.户姓名：小龙新版本特性：\n1.开户银行：江西银\n2.户姓名：小龙人\n3.子账户：621246000000000000\n4.户姓名：小龙新版本特性：\n1.开户银行：江西银\n2.户姓名：小龙人\n3.子账户：621246000000000000\n4.户姓名：小龙" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_download"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_btn2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_bg_r30_primary"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        tools:text="立即升级" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="16dp" />

                    <TextView
                        android:id="@+id/tv_btn1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_bg_green_r15_line_primary"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        tools:text="下次再说" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="25dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_check"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:button="@drawable/select_button1"
                        android:scaleX="1"
                        android:scaleY="1" />

                    <TextView
                        android:id="@+id/tv_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_666666"
                        android:textSize="12sp"
                        tools:text="本次更新不再提醒" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">

                <com.cretin.www.cretinautoupdatelibrary.view.ProgressView
                    android:id="@+id/progressView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>