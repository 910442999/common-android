<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--第一层阴影-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0F000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!--第二层前景-->
    <item
            android:bottom="1.5dp"
            android:left="1.5dp"
            android:right="1.5dp"
            android:top="1.5dp">
        <shape android:shape="rectangle">
            <solid android:color="#30000000"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>