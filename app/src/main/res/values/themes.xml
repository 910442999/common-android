<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Commonandroid" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item><!-- 设置状态栏背景色为透明 -->
        <item name="android:navigationBarColor">@android:color/transparent</item> <!-- 设置导航栏背景色为透明 -->
    </style>
    <!-- SelectTextFragment 样式 -->
    <style name="SelectTextFragment" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>